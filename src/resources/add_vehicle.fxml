<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="revenda.views.AddVehicleView">
   <center>
      <GridPane fx:id="grid" alignment="center" hgap="10" vgap="10">
          <children>
              <Label text="Marca" />
              <TextField fx:id="tfBrand" promptText="Digite a marca" GridPane.columnIndex="1" />
              <Label text="Modelo" GridPane.rowIndex="1" />
              <TextField fx:id="tfModel" promptText="Digite o modelo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
              <Label text="Cor" GridPane.rowIndex="2" />
              <TextField fx:id="tfColor" promptText="Digite a cor" GridPane.columnIndex="1" GridPane.rowIndex="2" />
              <Label text="Valor" GridPane.rowIndex="4" />
              <TextField fx:id="tfValue" promptText="Digite o valor" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#onClickSave" text="Salvar" GridPane.rowIndex="6" />
            <Label text="Placa" GridPane.rowIndex="3" />
            <TextField fx:id="tfPlate" promptText="Digite a placa" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Button fx:id="btnClear" mnemonicParsing="false" onAction="#onClickClear" text="Limpar" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
          </children>
          <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
          </rowConstraints>
          <columnConstraints>
              <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
              <ColumnConstraints />
          </columnConstraints>
          <opaqueInsets>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </opaqueInsets>
          <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
      </GridPane>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
