<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="revenda.controllers.EditVehicleController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <center>
            <GridPane fx:id="grid">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints />
              </rowConstraints>
                <children>
                    <Label text="Marca" />
                    <TextField fx:id="tfBrand" promptText="Digite a marca" GridPane.columnIndex="1" />
                    <Label text="Modelo" GridPane.rowIndex="1" />
                    <TextField fx:id="tfModel" promptText="Digite o modelo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Cor" GridPane.rowIndex="2" />
                    <TextField fx:id="tfColor" promptText="Digite a cor" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Valor" GridPane.rowIndex="4" />
                    <TextField fx:id="tfValue" promptText="Digite o valor" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Button fx:id="btnSave" mnemonicParsing="false" onAction="#onClickSave" text="Salvar" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin></Button>
                    <Label text="Placa" GridPane.rowIndex="3" />
                    <TextField fx:id="tfPlate" promptText="Digite a placa" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </children>
            </GridPane>
         </center>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </children>
</AnchorPane>
